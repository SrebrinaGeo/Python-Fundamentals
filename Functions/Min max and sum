    minimum = min(list_digits)
    maximum = max(list_digits)
    print(f"The minimum number is {min(list_digits)}")
    print(f"The maximum number is {max(list_digits)}")

    sum_nums = 0
    for number in list_digits:
        sum_nums += number
    print(f"The sum number is: {sum(list_digits)}")


